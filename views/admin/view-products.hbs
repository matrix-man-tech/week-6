<section id="table">
  <div class="container mt-5">
      <div class="row">
          <a href="/admin/add-product" style="width: 150px;"  class="btn btn-success ml-auto">Add Product</a>

      </div>
    <table class="table" id="productsTable">
      <thead>
        <tr>
          
          <th scope="col">Title</th>
          <th scope="col">Type</th>
          <th scope="col">Description</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          
          <td>{{this.Name}}</td>
          <td>{{this.Type}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
            <td>
                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a>
                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete{{this.Name}}?')">Delete</a>
                
                </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>



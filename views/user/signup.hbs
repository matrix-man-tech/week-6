<div class="row">
<div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
        <h2 class="text-center">Create New Account</h2>






<form method="post" id="registration" action="/signup">
                <div class="form-group">
                    <label for="fname">Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="fname" name="Name" placeholder="Enter Your First Name" >
                </div>
                
                <div class="form-group">
                    <label for="email">Email Id <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="Email" id="email" placeholder="Enter your email id" >
                </div>
                
                <div class="form-group">
                    <label for="password">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="Password" id="password" placeholder="Enter Your Password">
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-info btn-block">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            Already user? Login <a href="/login">here</a>
                        </div>
                    </div>
                </div>
            </form>

    </div>
</div>
</div>